<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol>996</defaultcontrol>
  <include>Animation_DialogPopupOpenClose</include>
  <coordinates>
    <origin x="0" y="0"/>
  </coordinates>
  <controls>
    <control type="image">
      <left>-1920</left>
      <top>-1080</top>
      <width>5760</width>
      <height>3240</height>
      <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
      <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
      <texture colordiffuse="B0FFFFFF">colors/black.png</texture>
    </control>
    <control type="button">
      <left>-1920</left>
      <top>-1080</top>
      <width>5760</width>
      <height>3240</height>
      <texturefocus/>
      <texturenofocus/>
      <onclick>Action(close)</onclick>
    </control>
    <control type="group">
      <animation effect="slide" end="0,225" time="0" condition="Window.IsActive(home)">conditional</animation>
      <centerleft>50%</centerleft>
      <centertop>50%</centertop>
      <width>506</width>
      <height>844</height>
      <control type="image" id="999">
        <description>background image</description>
        <top>-24</top>
        <left>-24</left>
        <width>506</width>
        <height>844</height>
        <bordersize>24</bordersize>
        <bordertexture border="32">common/shadow-dialog-24.png</bordertexture>
        <texture border="16" colordiffuse="dialog_bg_100">common/dialog.png</texture>
      </control>
      <include content="DefaultSettingButtonGradient">
        <param name="id" value="996"/>
        <param name="height" value="70"/>
        <top>0</top>
        <height>70</height>
        <width>458</width>
        <visible>ControlGroup(996).HasFocus()</visible>
      </include>
      <control type="grouplist" id="996">
        <description>grouplist for context buttons</description>
        <left>0</left>
        <top>0</top>
        <width>506</width>
        <height max="770">auto</height>
        <usecontrolcoords>true</usecontrolcoords>
      </control>
      <include content="UpDownArrows">
        <param name="container_id" value="996"/>
        <param name="posx" value="201"/>
        <param name="up_posy" value="-40"/>
        <param name="down_posy" value="808"/>
      </include>
    </control>
    <control type="button" id="1000">
      <description>button template</description>
      <left>0</left>
      <width>458</width>
      <height>70</height>
      <align>center</align>
      <texturefocus/>
      <texturenofocus/>
    </control>
  </controls>
</window>
